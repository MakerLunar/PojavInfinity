<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light or not? -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/background_status_bar</item>
        <item name="android:navigationBarColor">@color/theme_color_primary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/theme_color_primary</item>
        <item name="android:textColorHint">@color/theme_color_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="colorControlNormal">?attr/themeColorPrimary</item>
        <item name="colorControlActivated">?attr/themeColorSecondary</item>
        
        <item name="themeColorPrimary">@color/theme_color_primary</item>
        <item name="themeColorPrimaryLight">@color/theme_color_primary_light</item>
        <item name="themeColorSecondary">@color/theme_color_secondary</item>
        <item name="themeColorSecondaryLight">@color/theme_color_secondary_light</item>

    </style>

    <style name="ThickDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">?attr/themeColorPrimary</item>
    </style>

    <style name="NavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#FFF</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="PopupMenuStyle" >
        <item name="android:popupBackground">@drawable/background_button_normal</item>
    </style>

    <style name="DialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/background_button_normal</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
